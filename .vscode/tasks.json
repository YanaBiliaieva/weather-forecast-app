{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "kill server",
      "type": "shell",
      "command": "pkill -f \"MyFullStackApp/Server/bin/Debug/net8.0/Server.dll\" || true"
    },
    {
      "label": "build server",
      "type": "shell",
      "command": "dotnet",
      "args": [
        "build",
        "${workspaceFolder}/Server/Server.csproj"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": "$msCompile"
    },
    {
      "label": "prep server",
      "dependsOn": [
        "kill server",
        "build server"
      ]
    }
  ]
}
